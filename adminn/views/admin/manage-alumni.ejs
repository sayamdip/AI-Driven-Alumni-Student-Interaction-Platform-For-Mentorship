<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Therapy</title>
    <style>
        /* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
    text-decoration: none;
}

/* Body Background */
body {
    background: #2a3f54;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

/* Dashboard Container */
.dashboard-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

/* Card Design */
.dashboard-card {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    width: 500px;
    text-align: center;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
}

/* Card Hover Effect */
.dashboard-card:hover {
    transform: scale(1.05);
    box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.3);
}

/* Heading Animation */
h2 {
    color: #333;
    margin-bottom: 20px;
    animation: fadeInUp 1s ease-in-out;
}

/* Styled Table */
.styled-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

/* Table Header */
.styled-table thead {
    background: #007BFF;
    color: white;
}

/* Table Cells */
.styled-table th, .styled-table td {
    padding: 12px;
    border-bottom: 1px solid #ddd;
}

/* Table Row Hover */
.styled-table tr:hover {
    background-color: #f2f2f2;
}

/* Delete Button */
.delete-btn {
    background: #e74c3c;
    color: white;
    padding: 8px 12px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: 0.3s;
}

/* Delete Button Hover */
.delete-btn:hover {
    background: #c0392b;
    transform: scale(1.05);
}

/* Back Button */
.back-btn {
    display: inline-block;
    margin-top: 20px;
    background: #3498db;
    color: white;
    padding: 10px 15px;
    border-radius: 5px;
    transition: 0.3s ease-in-out;
}

/* Back Button Hover */
.back-btn:hover {
    background: #2980b9;
    transform: scale(1.05);
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

    </style>
    
    </head>
<body>

    <div class="dashboard-container">
        <div class="dashboard-card">
            <h2 class="fade-in">üõ† Manage Alumni</h2>
    
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Alumni Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% alumni.forEach(function(alumni) { %>
                        <tr id="alumni-<%= alumni.id %>">
                            <td><%= alumni.alumni_name %></td>
                            <td><%= alumni.email %></td>
                            <td>
                                <button class="delete-btn" onclick="confirmDelete('<%= alumni.id %>', '<%= alumni.alumni_name %>')">‚ùå Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
    
            <a href="/admin/dashboard" class="back-btn">‚¨ÖÔ∏è Back to Dashboard</a>
        </div>
    </div>
    
    <script>
        function confirmDelete(alumniId, alumniName) {
            if (confirm(`Are you sure you want to delete "${alumniName}"?`)) {
                fetch('/admin/alumni/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ alumni_id: alumniId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`${alumniName} deleted successfully!`);
                        document.getElementById(`alumni-${alumniId}`).remove();
                    } else {
                        alert("Failed to delete alumni.");
                    }
                })
                .catch(error => console.error("Error:", error));
            }
        }
    </script>
    

</body>
</html>
